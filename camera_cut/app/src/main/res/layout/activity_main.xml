<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="#22000000"
            android:layout_below="@+id/btn_creama"
             />

        <ImageView
            android:id="@+id/imageview"
            android:scaleType="centerCrop"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="80dip"
            android:layout_width="280dp"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:layout_height="280dp"
            android:background="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

        </LinearLayout>

        <TextView
            android:text="教材名稱："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/material_name"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:hint="輸入教材名稱" />

        <TextView
            android:text="教材上傳："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/material_upload"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_creama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".CramaActivity"
            android:text="開啟相機並裁剪圖片"
            android:layout_alignParentStart="true" />

        <!-- <Button
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/selectImageBtn"
             android:text="選擇圖片壓縮成方形"/> -->

        <Button
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/cutImageBtn"
             android:text="選擇圖片並裁剪"/>

        <TextView
            android:text="教材是否開放共享："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/material_share" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/share"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:text="是"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_yes"
                android:layout_weight="1" />

            <RadioButton
                android:text="否"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_no"
                android:layout_weight="1" />
        </RadioGroup>

        <Button
            android:text="確定上傳"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/enter" />

        <!--用於顯示圖片的訊息-->
    </LinearLayout>


</LinearLayout>



